<h1>
  <%= @article.title %>
  <small>
    <%= link_to edit_article_path(@article) do %>
      <i class ="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </small>
</h1>
<hr>
<p><%= @article.content %></p>
<%= link_to 'Back', articles_path %>
